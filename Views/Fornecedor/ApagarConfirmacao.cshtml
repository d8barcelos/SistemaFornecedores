@model FornecedorModel
@{
    ViewData["Title"] = "Confirmação apagar fornecedor";
}

<div class="text-center">
    <h3>Realmente deseja apagar o fornecedor @Model.Name ?</h3>
</div>

<a class="btn btn-primary btn-block" role="button" asp-controller="Fornecedor" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger btn-block" role="button" asp-controller="Fornecedor" asp-route-id="@Model.Id" asp-action="Deletar">Confirmar exclusão</a>